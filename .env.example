# LLM配置
# 选择使用的LLM提供商: openai, anthropic, 或 deepseek
LLM_PROVIDER=deepseek

# OpenAI配置 - 获取密钥: https://platform.openai.com/
OPENAI_API_KEY=sk-xxx
OPENAI_MODEL=gpt-4

# Anthropic配置 - 获取密钥: https://console.anthropic.com/
# 重要: 请使用您自己的Anthropic API密钥，不要使用Claude Code凭证
ANTHROPIC_API_KEY=sk-ant-xxx
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# DeepSeek配置 - 获取密钥: https://platform.deepseek.com/
DEEPSEEK_API_KEY=sk-xxx
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_API_BASE=https://api.deepseek.com

# 生成参数
MAX_TOKENS=1800
TEMPERATURE=0.4
MAX_RETRIES=3

# TTS配置
XUNFEI_APP_ID=xxx
XUNFEI_API_KEY=xxx
XUNFEI_API_SECRET=xxx
VOLCENGINE_APP_ID=xxx
VOLCENGINE_TOKEN=xxx
